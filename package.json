{
    "name": "authentication-system",
    "version": "1.0.0",
    "description": "Authentication System Using Nodejs",
    "type": "module",
    "main": "server.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon src/server.js",
        "start": "cross-env NODE_ENV=production node src/server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky",
        "migrate:dev": "cross-env NODE_ENV=development MIGRATE_MODE=development node script/migration.js",
        "migrate:prod": "cross-env NODE_ENV=production MIGRATE_MODE=production node script/migration.js"
    },
    "keywords": [],
    "author": "Shubham kumar",
    "license": "ISC",
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/js": "^9.23.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "colorette": "^2.0.20",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv-flow": "^4.1.0",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.13.1",
        "rate-limiter-flexible": "^6.2.1",
        "resend": "^4.2.0",
        "ts-migrate-mongoose": "^4.0.7",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-mongodb": "^6.0.0"
    }
}
